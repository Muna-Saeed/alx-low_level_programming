CC = gcc
SRC = main.c school.c
OBJ = $(SRC:.c=.o)
NAME = school
CFLAGS = -Wall -Werror -Wextra -pedantic

.PHONY: all clean oclean fclean re

all: $(NAME)

$(NAME): $(OBJ)
	$(CC) $(OBJ) -o $@

$(OBJ): %.o: %.c | m.h
	$(CC) $(CFLAGS) -c $< -o $@

clean:
	-$(RM) $(NAME)
	-find . -type f \( -name '*~' -o -name '#*#' \) -delete

oclean:
	-$(RM) $(OBJ)
	-find . -type f \( -name '*~' -o -name '#*#' \) -delete

fclean: clean oclean

re: fclean all

m.h:
	@echo "Missing header file: m.h"
	@false
